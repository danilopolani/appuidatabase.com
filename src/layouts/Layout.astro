---
import Navbar from '../components/Navbar.astro';

interface Props {
	title?: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />

		<title>{title ? `${title} | App UI Database` : 'App UI Database - Collection of desktop apps components'}</title>
		<meta name="description" content="Collection of desktop apps components for inspiration and reference">
		<meta name="generator" content={Astro.generator} />
		<link rel="sitemap" href="/sitemap-index.xml" />

		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->

		<script defer data-domain="appuidatabase.com" src="https://plausible.io/js/script.js"></script>

		<link rel="preconnect" href="https://fonts.bunny.net">
		<link href="https://fonts.bunny.net/css?family=lexend-mega:700|public-sans:400,600,700" rel="stylesheet" />
		<style is:global>
			.lum-lightbox {
				z-index: 11;
				@apply bg-pastel-black/90;
			}

			.lum-img {
				display: initial;
				vertical-align: initial;
				@apply border-4;
			}

			.link {
				@apply hover:underline hover:decoration-wavy group-hover:underline group-hover:decoration-wavy decoration-pastel-yellow underline-offset-4 decoration-2;
			}
		</style>
	</head>
	<body class="text-pastel-black bg-slate-50 font-body">
		<Navbar isHome={!title} />

		<div class="container px-4 md:px-0 mx-auto py-10">
			<slot />
		</div>

		<footer class="py-4 px-4 bg-pastel-black text-white text-xs flex w-full justify-between">
			<p>Screenshots' intellectual property belongs to their owner.</p>
			<p>Free and Open Source on <a href="https://github.com/danilopolani/appuidatabase.com" target="_blank" class="hover:underline hover:decoration-wavy decoration-pastel-yellow underline-offset-2 text-pastel-purple">GitHub</a> by <a href="https://twitter.com/theraloss" target="_blank" class="hover:underline hover:decoration-wavy decoration-pastel-yellow underline-offset-2 text-pastel-purple">Danilo Polani</a>.</p>
		</footer>
	</body>
</html>
