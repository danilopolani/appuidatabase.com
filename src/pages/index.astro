---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import HomeApps from '../components/HomeApps.vue';
import { fetchAppsScreensCount } from 'src/helpers';

const apps = fetchAppsScreensCount(await getCollection('apps'), await getCollection('screens'));
---
<Layout>
	<HomeApps apps={apps} client:load />
</Layout>
